{
    "name": "mekras/obereg",
    "description": "PHP fault tolerance library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Михаил Красильников",
            "email": "m.krasilnikov@yandex.ru"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.5",
        "mekras/types": "^1.5",
        "php-http/httplug": "^1.0",
        "php-http/message": "^1.0",
        "php-http/message-factory": "^1.0"
    },
    "suggest": {
        "doctrine/cache": "Use Doctrine Cache as a caching backend"
    },
    "require-dev": {
        "doctrine/cache": "^1.6",
        "guzzlehttp/psr7": "^1.2",
        "phpunit/phpunit": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Mekras\\Obereg\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mekras\\Obereg\\Tests\\": "tests"
        }
    }
}